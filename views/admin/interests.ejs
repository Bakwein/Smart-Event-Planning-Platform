<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <style>
        body {
            /* display: flex; */
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(to right, #f0f0f0, #b5fcd8);
        }
    </style>
</head>
<body>
    <%- include('../partials/admin/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3>İlgiler</h3>
            </div>
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:50px">İlgi Id</th>
                            <th>İlgi Alanı</th>
                            <th style="width:130px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% ilgiler.forEach(ilgi => { %>
                            <tr>
                                <td>
                                    <%= ilgi.idilgiAlanlari%>
                                </td>
                                <td>
                                    <%= ilgi.ilgiAlani %>   
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-danger" href="/admin/interests/interest/delete/<%=ilgi.idilgiAlanlari%>">Sil</a>
                                </td>
                            </tr>
                        <% }) %>
                        <tr>
                            <form action="/admin/interests/interest/add" method="POST">
                                <td>
                                    
                                </td>
                                <td>
                                    <input type="text" name="ilgiAlaniYeni" placeholder="Yeni ilgi alanı" required class="form-control">
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-sm btn-primary">Ekle</button>
                                </td>
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <% if (message && message.length > 0) { %>
            <div class="row justify-content-center" style="margin-left: 90px;">
                <div class="col-md-8">
                    <div class="alert <%= alert_type %> row justify-content-center" role="alert">
                        <%= message %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3>İlişkiler</h3>
            </div>
            <div class="col-md-12 mt-3">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width:50px">İlişki Id</th>
                            <th>Kullanıcı Adı</th>
                            <th>İlgi Alanı</th>
                            <th style="width:130px"></th>
                        </tr>
                    </thead>
                    <tbody>

                        <% iliskiler.forEach(iliski => { %>
                            <tr>
                                <td>
                                    <%= iliski.idkullanici_ilgileri %>
                                </td>
                                <td>
                                    <%= iliski.KullanıcıAdı %>   
                                </td>
                                <td>
                                    <%= iliski.ilgiAlani %>   
                                </td>
                                <td>
                                    <a class="btn btn-sm btn-danger" href="/admin/interests/connection/delete/<%=iliski.idkullanici_ilgileri%>">Sil</a>
                                </td>
                            </tr>
                        <% }) %>
                        <tr>
                            <form action="/admin/interests/connection/add" method="POST">
                                <td></td>
                                <td>
                                    <select name="selectedKullanici" class="form-control">
                                        <% kullanicilar.forEach(kullanici => { %>
                                            <option value="<%= kullanici.idkullanıcılar %>"><%= kullanici.KullanıcıAdı %></option>
                                        <% }) %>
                                    </select>
                                </td>
                                <td>
                                    <select name="selectedIlgi" class="form-control">
                                        <% ilgiler.forEach(ilgi => { %>
                                            <option value="<%= ilgi.idilgiAlanlari %>"><%= ilgi.ilgiAlani %></option>
                                        <% }) %>
                                    </select>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-sm btn-primary">Ekle</button>
                                </td>
                            </form>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <% if (message && message.length > 0) { %>
            <div class="row justify-content-center" style="margin-left: 90px;">
                <div class="col-md-8">
                    <div class="alert <%= alert_type %> row justify-content-center" role="alert">
                        <%= message %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</body>
</html>