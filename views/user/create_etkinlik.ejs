<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
    <style>
        #map { height: 400px; margin-bottom: 20px; }
    </style>
</head>
<body>
    <%- include('../partials/user/nav') %>
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <h3>Etkinlik Oluştur</h3>
            </div>
            <div class="col-md-12 mt-3">
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label for="etkinlikFoto" class="col-sm-2 col-from-label"></label>
                        <div class="col-sm-8">
                            <img id="eventPhotoPreview" src="/static/images/event.png" class="card-img-top mx-auto mb-3" alt="Event Photo" style="width: 50%; height: auto;">
                            <input type="file" class="form-control" id="etkinlikFoto" name="etkinlikFoto" accept="image/*" onchange="previewEventPhoto(event)">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="KullanıcıAdı" class="col-sm-2 col-from-label">Etkinlik Adı</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="etkinlikAdi" name="etkinlikAdi">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="tarih" class="col-sm-2 col-from-label">Etkinlik Tarihi:</label>
                        <div class="col-sm-8">
                            <input type="date" id="tarih" name="tarih" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="saat" class="col-sm-2 col-from-label">Etkinlik Saati:</label>
                        <div class="col-sm-8">
                            <input type="time" class="form-control" id="saat" name="saat" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="etkinlikSuresi" class="col-sm-2 col-from-label">Etkinlik Süresi (dakika):</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="etkinlikSuresi" name="etkinlikSuresi" required>
                        </div>
                    </div>      
                    <div class="row mb-3">
                        <label for="kategori" class="col-sm-2 col-from-label">Kategori:</label>
                        <div class="col-sm-8">
                            <select id="kategori" name="kategori" required>
                                <option value="-1" selected>Kategori Seçiniz</option>
                                <% kategoriler.forEach(kategori => { %>
                                    <option value="<%= kategori.idilgiAlanlari  %>"><%= kategori.ilgiAlani %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-from-label">Açıklama:</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" id="aciklama" name="aciklama" required></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-from-label">Konum:</label>
                        <div class="col-sm-8">
                            <div id="map"></div>
                            <input type="hidden" id="enlem" name="enlem">
                            <input type="hidden" id="boylam" name="boylam">
                        </div>
                    </div>
                    
                    
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Oluştur</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <% if (message && message.length > 0) { %>
            <div class="row justify-content-center" style="margin-left: 90px;">
                <div class="col-md-8">
                    <div class="alert <%= alert_type %> row justify-content-center" role="alert">
                        <%= message %>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        
    function previewEventPhoto(event) {
        const reader = new FileReader();
        reader.onload = function() {
            const output = document.getElementById('eventPhotoPreview');
            output.src = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);

    }

